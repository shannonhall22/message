<div class="container">
  <div class="row">
    <h1>Edit this Post!</h1>
  </div>
  <div class="row">
    <form class="form-horizontal" action="/update_post/:id">
      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" value="<%= @post.title %>">
        </div>
      </div>
      <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="image" name="image" value="<%= @post.image_url %>">
        </div>
      </div>
      <div class="form-group">
        <label for="contents" class="col-sm-2 control-label">Contents</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="contents" name="contents" value="<%= @post.contents %>">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
