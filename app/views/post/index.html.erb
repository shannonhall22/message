<% @post.each do |posts| %>
  <div class="article-list">
    <div class="row">
      <article class="col-md-6 col-md-offset-3">
        <img class="img-responsive" src="<%= posts.image_url %>" alt="<%= posts.title %>">
        <h3><a href="/posts/<%= posts.id %>"><%= posts.title %></a></h3>
        <h4><%= posts.contents %></h4>
        <div class="btn-group" role="group" aria-label="...">
            <a class="btn btn-primary" href="/posts/<%= posts.id %>"><i class="fa fa-search-plus"></i> Show</a>
            <a class="btn btn-warning" href="/posts/<%= posts.id %>/edit"><i class="fa fa-pencil-square-o"></i> Edit</a>
            <a class="btn btn-danger" href="/delete_post/<%= posts.id %>"><i class="fa fa-trash-o"></i> Destroy</a>
          </div>
      </article>
    </div>
  </div>
<% end %>

